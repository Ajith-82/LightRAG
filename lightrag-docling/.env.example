# LightRAG Docling Service Configuration

# Service settings
DOCLING_HOST=0.0.0.0
DOCLING_PORT=8080
DOCLING_WORKERS=1
DOCLING_SERVICE_NAME=lightrag-docling
DOCLING_SERVICE_VERSION=1.0.0

# Processing limits
DOCLING_MAX_FILE_SIZE_MB=100
DOCLING_MAX_BATCH_SIZE=10
DOCLING_REQUEST_TIMEOUT_SECONDS=300

# Default docling configuration
DOCLING_DEFAULT_EXPORT_FORMAT=markdown
DOCLING_DEFAULT_MAX_WORKERS=2
DOCLING_DEFAULT_ENABLE_OCR=true
DOCLING_DEFAULT_ENABLE_TABLE_STRUCTURE=true
DOCLING_DEFAULT_ENABLE_FIGURES=true
DOCLING_DEFAULT_ENABLE_CACHE=true

# Model settings
DOCLING_DEFAULT_LAYOUT_MODEL=auto
DOCLING_DEFAULT_OCR_MODEL=auto
DOCLING_DEFAULT_TABLE_MODEL=auto

# Quality settings
DOCLING_DEFAULT_IMAGE_DPI=300
DOCLING_DEFAULT_OCR_CONFIDENCE=0.7
DOCLING_DEFAULT_TABLE_CONFIDENCE=0.8

# Cache settings
DOCLING_CACHE_ENABLED=true
DOCLING_CACHE_DIR=./cache
DOCLING_CACHE_MAX_SIZE_GB=5
DOCLING_CACHE_TTL_HOURS=168

# Logging
DOCLING_LOG_LEVEL=INFO
DOCLING_LOG_FILE=
DOCLING_ACCESS_LOG=true

# Security (leave empty to disable authentication)
DOCLING_API_KEY=
DOCLING_CORS_ORIGINS=*

# Monitoring
DOCLING_METRICS_ENABLED=true
DOCLING_HEALTH_CHECK_INTERVAL=30

# Development settings
DOCLING_DEBUG=false
DOCLING_RELOAD=false
